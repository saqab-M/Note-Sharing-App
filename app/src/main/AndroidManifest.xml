<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uol.notesappuol">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotesAppUOL">
        <activity
            android:name=".toDo.ToDoActivity"
            android:exported="false"
            android:theme="@style/Theme.NotesAppUOL.NoActionBar"/>
        <activity
            android:name=".noteFeed.FeedNoteDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_feed_note_details"
            android:theme="@style/Theme.NotesAppUOL.NoActionBar" />
        <activity
            android:name=".noteFeed.NoteFeedActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LaunchScreenActivity"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".authentication.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".authentication.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".note.EditNoteActivity"
            android:exported="false"
            android:theme="@style/Theme.NotesAppUOL.NoActionBar" />
        <activity
            android:name=".note.AddNoteActivity"
            android:exported="false"
            android:label="@string/title_activity_add_note"
            android:theme="@style/Theme.NotesAppUOL.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".note.NoteDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_note_details"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>